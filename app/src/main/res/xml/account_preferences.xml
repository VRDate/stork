<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:key="pref_account_general"
            android:title="General">
        <SwitchPreference
                android:key="accountEnabled"
                android:title="Account active"/>
        <Preference
                android:key="account_vcard"
                android:title="User details"/>
    </PreferenceCategory>
    <PreferenceCategory
            android:key="pref_account_connection"
            android:title="Connection">
        <EditTextPreference
                android:editable="false"
                android:enabled="false"
                android:key="account_id"
                android:summary="XMPP ID"
                android:title=""/>


        <EditTextPreference
                android:key="account_password"
                android:password="true"
                android:title="Password"/>

        <EditTextPreference
                android:inputType="textUri"
                android:key="account_hostname"
                android:summary="(default)"
                android:title="Hostname"/>

        <EditTextPreference
                android:key="account_resource"
                android:summary="TigaseMessenger"
                android:title="Resource"/>

        <SwitchPreference
                android:key="account_priorites_enabled"
                android:title="Automatic priorities"/>
        <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                          android:enabled="true"
                          android:key="account_priorites_screen"
                          android:title="Custom resource priorities">
            <intent
                    android:action="PRIORITIES_SCREEN"
                    android:targetClass="org.tigase.messenger.phone.pro.account.AccountProperties"
                    android:targetPackage="org.tigase.messenger.phone.pro"/>
        </PreferenceScreen>


        <Preference
                android:key="account_force_reconnect"
                android:summary="Force connect or reconnect this account"
                android:title="Force reconnect"/>

        <!--<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:key="loginDetails"-->
        <!--android:enabled="true"-->
        <!--android:title="Login details">-->
        <!--<intent-->
        <!--android:action="android.intent.action.EDIT"-->
        <!--android:targetPackage="org.tigase.messenger.phone.pro"-->
        <!--android:targetClass="org.tigase.messenger.phone.pro.account.LoginActivity"/>-->
        <!--</PreferenceScreen>-->
    </PreferenceCategory>
    <PreferenceCategory
            android:key="pref_account_pushnotifications"
            android:title="Push Notifications">
        <SwitchPreference
                android:key="account_push_notification"
                android:title="Enabled"/>
    </PreferenceCategory>
    <PreferenceCategory
            android:key="pref_account_others"
            android:title="Message Archiving">
        <ListPreference
                android:entries="@array/account_mam_labels"
                android:entryValues="@array/account_mam_values"
                android:key="account_mam_type"
                android:negativeButtonText="@null"
                android:persistent="false"
                android:positiveButtonText="@null"
                android:title="@string/account_mam_title"/>
    </PreferenceCategory>
    <PreferenceCategory
            android:key="pref_account_others"
            android:title="Others">
        <EditTextPreference
                android:key="account_nickname"
                android:title="Nickname"/>
    </PreferenceCategory>
</PreferenceScreen>