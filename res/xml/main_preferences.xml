<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:key="tigase_messenger_preferences" android:title="@string/preferencesTitle">

	<PreferenceCategory xmlns:android="http://schemas.android.com/apk/res/android"
		android:key="login_data" android:title="@string/pref_login_section_title"
		android:summary="@string/pref_login_section_summary">
		<EditTextPreference android:key="user_jid"
			android:dialogTitle="@string/pref_login_jid_dialog" android:summary="@string/pref_login_jid_summary"
			android:title="@string/pref_login_jid_title" />
		<EditTextPreference android:key="user_password"
			android:dialogTitle="@string/pref_login_password_dialog"
			android:summary="@string/pref_login_password_summary" android:title="@string/pref_login_password_title"
			android:password="true"></EditTextPreference>
		<EditTextPreference android:summary="@string/pref_login_hostname_summary"
			android:title="@string/pref_login_hostname_title" android:key="hostname"
			android:dialogTitle="@string/pref_login_hostname_dialog"></EditTextPreference>
	</PreferenceCategory>

	<PreferenceCategory android:key="gui_details"
		android:title="@string/pref_login_ui_section_title" xmlns:android="http://schemas.android.com/apk/res/android">

		<ListPreference android:key="notification_type"
			android:defaultValue="always" android:title="@string/pref_login_ui_notification_title"
			android:entries="@array/app_icon_options" android:entryValues="@array/app_icon_options_values" />

	</PreferenceCategory>

</PreferenceScreen>
