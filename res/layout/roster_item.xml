	<TextView android:textSize="18sp" android:id="@+id/roster_item_jid" android:layout_width="fill_parent" android:textStyle="bold" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView1" android:layout_toLeftOf="@+id/roster_item_precence" android:layout_height="40px" android:text="Buddy name" android:paddingLeft="10sp"></TextView>
