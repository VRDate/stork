<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="5px" android:layout_width="wrap_content" android:layout_height="wrap_content">
	<ImageView android:id="@+id/imageView1" 
	android:src="@drawable/user_avatar" android:layout_width="50sp" android:layout_height="50sp"></ImageView>
	<ImageView android:id="@+id/roster_item_precence" android:src="@drawable/user_offline"
		android:textSize="16sp" android:gravity="center" android:scaleType="center"
		android:layout_alignParentRight="true"
		 android:adjustViewBounds="false" android:cropToPadding="true" android:layout_alignTop="@+id/roster_item_jid" android:layout_height="55sp" android:layout_width="26sp"/>
