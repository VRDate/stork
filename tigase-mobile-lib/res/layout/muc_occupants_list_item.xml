<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5px" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="26sp"
        android:layout_height="50sp" >

        <ImageView
            android:id="@+id/occupant_icon"
            android:layout_width="26sp"
            android:layout_height="50sp"
            android:src="@drawable/user_offline" >
        </ImageView>
    </FrameLayout>

    <TextView
        android:id="@+id/occupant_status_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/occupant_nickname"
        android:layout_below="@+id/occupant_nickname"
        android:paddingLeft="10sp"
        android:singleLine="true"
        android:textSize="14sp" >
    </TextView>

    <TextView
        android:id="@+id/occupant_nickname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/occupant_avatar"
        android:layout_toRightOf="@+id/frameLayout1"
        android:paddingLeft="10sp"
        android:textSize="18sp"
        android:textStyle="bold" >
    </TextView>

    <ImageView
        android:id="@+id/occupant_avatar"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentRight="true"
        android:src="@drawable/user_avatar" >
    </ImageView>

</RelativeLayout>